<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/movie_trailer_container"
             style="@style/movieTrailerContainer">

    <android.support.v7.widget.CardView
        android:id="@+id/movie_trailer_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/default_margin"
        app:cardElevation="@dimen/default_elevation"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movie_trailer_thumb"
                android:layout_width="@dimen/movieTrailerThumbWidth"
                android:layout_height="@dimen/movieTrailerThumbHeight"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/movie_trailer_thumbnail"
                android:scaleType="centerCrop"
                tools:background="@color/colorAccent"/>

            <TextView
                android:id="@+id/movie_trailer_title"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/movieTrailerTitleMargin"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/movieTrailerTitleTextSize"
                tools:text="Trailer 1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>