<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/movie_review_cardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/default_margin"
                                    app:cardElevation="@dimen/default_elevation"
                                    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_review_author"
            style="@style/movieReviewAuthor"
            tools:text="John Miller"/>

        <TextView
            android:id="@+id/movie_review_content"
            style="@style/movieReviewContent"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum enim eros, laoreet ac fringilla elementum, rutrum vel quam. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum enim eros, laoreet ac fringilla elementum, rutrum vel quam."/>

    </LinearLayout>

</android.support.v7.widget.CardView>