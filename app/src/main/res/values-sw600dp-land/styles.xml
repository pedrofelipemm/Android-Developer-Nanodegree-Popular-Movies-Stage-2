<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="movieOverviewTextview" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="movieReleaseDate" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/movieReleaseDateLeftMargin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/movieReleaseDateLeftMargin
        </item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="movieTrailerContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>